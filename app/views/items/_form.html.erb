<%= simple_form_for @item do |f| %>
  <%= f.input :title, label: "Item" %>
  <%= f.input :description %>
  <%= f.input :due_date, as: :date, start_year: Date.today.year + 53,
                      end_year: Date.today.year - 110, discard_day: true,
                      order: [:month, :year],
                      label: "Due:"  %>

  <%= f.button :submit %>

<% end %>